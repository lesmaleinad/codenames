<!DOCTYPE html>
<html>
<head>
	<title>CodeNames V0.1</title>
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
	<link href="https://fonts.googleapis.com/css?family=Ubuntu:300,700&display=swap" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="codenamesStyles.css">


</head>
<body>
	<!-- COLOR BACKDROP -->
<div id='backdrop'><div id='circles'></div></div>

	<!-- MENU CONTAINER -->

<div class='container p-3 flex-column align-items-center row' id='menu'>

	<!-- TEAM SELECTION -->

	<div style="display: none" class="btn-group col-3 justify-content-center" id='menu-team' role="team" aria-label="team">
		<button type="button" class="btn btn-lg btn-secondary p-1"><span>RED TEAM</span></button>
		<button type="button" class="btn btn-lg btn-secondary p-1"><span>BLUE TEAM</span></button>
	</div>

	<!-- ROLE SELECTION -->

	<div style="display: none" class="btn-group col-3 justify-content-center" id='menu-role' role="role" aria-label="role">
		<span>
			<button type="button" class="btn btn-lg btn-secondary p-1" id="codem">CodeMaster</button>
			<!-- <span id="menu-color">COLOR:<input type='color'></span> -->
		</span>
		
		<span>
			<button type="button" class="btn btn-lg btn-secondary p-1" id='opera'>Operative</button>
		<!-- <span id="menu-name">NICKNAME: <input type='text'></span> -->
		</span>
	</div>

	<!-- SUBMIT -->

	<button style="display: none" type="button" id='menu-submit' class="btn btn-lg btn-secondary col-3"><span>SUBMIT</span></button>

</div>

	<!-- GAME BOARD -->

<div class='container p-1 p-xl-3' style='display: none' id="game">

	<div class='row flex-column flex-xl-row align-items-strech'>
	
		<div class='flex-column row col-3 p-xl-0' id="gameHeader">

			<h1 class='col-3 m-0 mw-100'>
				<span>CODENAMES</span>	
			</h1>

			<div class='head-content align-items-strech flex-column d-flex row col-9 p-xl-0'>

				<div class='cp col-4'>
					<span>Current Player: 
						<span class="pb-1" id='currentPlayer'></span>
					</span>
				</div>

				<span class="col flex-row flex-xl-column justify-content-between justify-content-xl-start align-self-center p-0" id="giveCode">
					<span>
						<input type="text" name="code" id="code" placeholder="Enter CODE">
						<input type="number" name="guesses" id="guesses" placeholder="Enter GUESSES">
						<input class="mt-3" type="submit" id="submitCode" name="">
					</span>
				</span>
		
				<p class="col flex-row flex-xl-column align-items-center" id="operative">
					<span>
						<span id="getCode">Code is: </span>
						<input type="submit" value="Done" name="" id="codeDone">
					</span>


				</p>	
			</div>
		</div>

		<div class="cardField col-9 m-0"></div>
		
	</div>
</div>
	
